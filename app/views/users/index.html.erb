<div class="container">
  <div class="row">
    <div class="col-md-12">
    
    <!--Search User-->
      <div class="d-flex order-manage p-3 align-items-center mb-4">
        <%= form_with(url: users_path, method: :get, local: true) do |f|%>
          <div class="row text-center">
            <%= link_to  "Your Profile", user_path(current_user.id), class: "btn btn-info col-" %>
          </div>
        <% end %>
      </div>

      <div class="d-flex order-manage p-3 align-items-center mb-4">
        <%= form_with(url: events_path, method: :get, local: true) do |f|%> 
           <div class="row text-center">
            <%= f.text_field :name , class:"form-control  col-4", placeholder: "search User by name"%> &nbsp;
            <%= f.submit'search', class:"btn btn-primary col-3"%><br> &nbsp;
            <%= link_to "Clear search",users_path, class: "btn btn-primary col-4" %> &nbsp;
          </div>
        <% end %>
      </div>
      
    </div>
  </div>

  <div class="row">
    <% @users.each do |user| %>
      <% unless user == current_user %>
      <div class="profile card card-body px-3 pt-3 pb-0">
        <div class="profile-head">                     
          <div class="profile-info">
            <div class="profile-photo">
              <%= image_tag (user.avatar_thumbnail), class:"mx-auto d-block rounded-circle z-depth-1-half avatar-pic", style:"width:80px;height:80px"%>
            </div>
            <div class="profile-details">
              <div class="profile-name px-3 pt-2">
                <p>Name:</p>
                <h4 class="text-primary mb-0"><%= link_to "#{user.name}", user %></h4>
              </div>
              <div class="profile-email px-2 pt-2">
                <p>Email</p>
                <h4 class="text-muted mb-0"><%= user.email %></h4>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
    <hr>
  </div>
  <div class="card">
    <div class="card-body text-center" >
      <%= paginate @users, theme: 'twitter-bootstrap-4',
                  pagination_class: "pagination-sm",
                  nav_class: "d-inline-b"%>
    </div>
  </div>
</div>
