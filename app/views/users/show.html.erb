<div class="container">
  <div class="form-head d-flex mb-3 align-items-start">
    <div class="mr-auto">
      <h2 class="text-black font-w600 mb-0">EventKam > Profile</h2>
      <% if @user == current_user%>
        <p class="mb-0">Welcome <%= @user.name %></p>
         <%= link_to "Update profile", edit_user_registration_path, class:"btn btn-primary"%> 
         <%= link_to "Delete Account", user_path(@user.id), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger"%> 
      <%else%>
        <p class="mb-0">Welcome <%= current_user.name %></p>
        <p class="text-primary mb-0">This is <%= @user.name %> profile.</p>
      <%end%>
    </div>
    
    <div class="dropdown custom-dropdown">
      <div class="btn btn-sm btn-primary light d-flex align-items-center svg-btn" data-toggle="dropdown">
        <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg"><g><path d="M22.4281 2.856H21.8681V1.428C21.8681 0.56 21.2801 0 20.4401 0C19.6001 0 19.0121 0.56 19.0121 1.428V2.856H9.71606V1.428C9.71606 0.56 9.15606 0 8.28806 0C7.42006 0 6.86006 0.56 6.86006 1.428V2.856H5.57206C2.85606 2.856 0.560059 5.152 0.560059 7.868V23.016C0.560059 25.732 2.85606 28.028 5.57206 28.028H22.4281C25.1441 28.028 27.4401 25.732 27.4401 23.016V7.868C27.4401 5.152 25.1441 2.856 22.4281 2.856ZM5.57206 5.712H22.4281C23.5761 5.712 24.5841 6.72 24.5841 7.868V9.856H3.41606V7.868C3.41606 6.72 4.42406 5.712 5.57206 5.712ZM22.4281 25.144H5.57206C4.42406 25.144 3.41606 24.136 3.41606 22.988V12.712H24.5561V22.988C24.5841 24.136 23.5761 25.144 22.4281 25.144Z" fill="#2F4CDD"></path></g></svg>
        <div class="text-left ml-3">
          <span class="d-block fs-16">Your date</span>
          <small class="d-block fs-13"> <%= Time.zone.now%></small>
        </div>
        <i class="fa fa-angle-down scale5 ml-3"></i>
      </div>
      <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item" href="#">4 June 2020 - 4 July 2020</a>
        <a class="dropdown-item" href="#">5 july 2020 - 4 Aug 2020</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-2">
      <%= image_tag (@user.avatar_thumbnail), style: 'height:150px;width:150px;'%>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td><strong>Name </strong>:<%= @user.name %></td>
          </tr>
          <tr>
            <td><strong>Email </strong><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


<%if @user.participants.present?%>
  <div class="card">
    <div class="card-body pt-2">
      <div class="table-responsive ">
        <table class="table items-table">
          <% @events.each do |event| %>
          <tbody>
            <tr>
              <th class="my-0 text-black font-w500 fs-20">Event information</th>
              <th class="my-0 text-black font-w500 fs-16">Participants</th>
            </tr>
            <tr>
              <td>
                <div class="media">
                   <%= image_tag (event.image_thumbnail), class:"mr-3 img-fluid rounded", width:"85",alt:"DexignZone"%>
                  <div class="media-body">
                    <small class="mt-0 mb-1 text-primary font-w500">Create By:<%= link_to "#{event.user.name}", user_path(event.user.id) %></small>
                    <h5 class="mt-0 mb-2 text-black mb-4">Event Name: <%= event.title %></h5>
                    <div class="star-review fs-16">
                      <p class="ml-3 text-dark" style="word-wrap: break-word"><%= event.content%></p>
                    </div>

                     <%= link_to "See the Post", event_path(event.id), class: "badge badge-rounded badge-primary" %>  
                    <% if current_user && current_user == event.user || current_user.admin?%>
                      <%= link_to "Edit", edit_event_path(event), class: "badge badge-rounded badge-secondary"%>
                      <%= link_to "Delete", event_path(event.id), method: :delete, data: {confirm: 'Are you sure?'}, class: "badge badge-rounded badge-primary"%> 
                    <%else%>
                     <!--> <span class="badge badge-xl light badge-warning">Warning
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true">
                        </span>
                        You may not modify or delete the content of others. 
                      </span> -->
                    <%end%>
                   
                  </div>
                </div>
              </td>
              <td>
                <h4 class="my-0 text-secondary font-w600"><a href="javascript:void()" class="badge badge-info"><%=event.participants.count%></a></h4>
              </td>
              <td>
                <a href="#" class="ti-close fs-28 text-danger las la-times-circle"></a>
              </td>
            </tr>
          </tbody>
          <%end%>
        </table>
         
      </div>	
    </div> 
    <div class="card">
      <div class="card-body text-center" >
        <%= paginate @events, theme: 'twitter-bootstrap-4',
                    pagination_class: "pagination-sm",
                    nav_class: "d-inline-b"%>
      </div>
    </div>

  </div>

<%else%>
  <p>No Event</p>
<%end%>