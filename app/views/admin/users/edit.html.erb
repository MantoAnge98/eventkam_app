<div class="container">
  <br>
  <h3 class="text-center">Edit User Role</h3>
  <br>
  <% if @user.errors.any? %> 
    <div id="error_explanation"  class="alert alert-danger" role="alert">> 
      <h4><%= pluralize(@user.errors.count, "erreurs") %> empêche(nt) <%= @user.name %> d'être sauvegardée(s):</h4> 
      <ul> 
        <% @user.errors.full_messages.each do |message| %> 
          <li><%= message %></li> 
        <% end %> 
      </ul> 
    </div> 
  <% end %>

  <div class="authincation h-100">
    <div class="container h-100">
      <div class="row justify-content-center h-100 align-items-center">
        <div class="col-md-6">
          <div class="authincation-content">
            <div class="row no-gutters">
                <div class="col-xl-12">
                  <div class="auth-form">
                    <h4 class="text-center mb-4">Enter information</h4>
                      <%= form_with(model: [:admin, @user], local: true) do |f| %>
                      
                      <div class="file-field form-group">
                        <div class="mb-4">
                          <img src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                            class=" mx-auto d-block rounded-circle z-depth-1-half avatar-pic" alt="example placeholder avatar" style="width:150px;height:150px" id="output">
                        </div>
                        <div class="form-group">
                          <label class="mb-1"><span>Add photo</span></label>
                          <%= f.file_field :avatar, autofocus: true, accept:"image/*", autocomplete: "avatar",class:"form-control", onchange:"loadFile(event)"%>
                        </div>
                      </div>
                      
                      <div class="field">
                        <%= f.label :name %>
                        <%= f.text_field :name, :class => 'form-control' %> 
                      </div>

                      <div class="field">
                        <%= f.label :email %> 
                        <%= f.email_field :email, :class => 'form-control' %> 
                      </div>

                      <div class="field form-group">
                        <div class="checkbox-inline">
                          <%= f.label :admin %> 
                          <%= f.check_box :admin,{}, "true","false" %> 
                        </div>
                      </div>

                      <div class="field">
                        <%= f.label :password %> 
                        <%= f.password_field :password,  :class => 'form-control'  %>
                      </div>

                      <div class="field">
                        <%= f.label :password_confirmation %> 
                        <%= f.password_field :password_confirmation, autocomplete: "email",  class: "form-control"  %> 
                      </div>
                      <hr>
                      <div class="actions">
                        <%= f.submit "Update Admin", class: "btn btn-secondary col-6" %> 
                        <%=link_to "User Login",new_user_session_path , class: "btn btn-secondary" %>
                      </div>
                      <hr>
                    
                    <% end %>
                  
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
      
</div>